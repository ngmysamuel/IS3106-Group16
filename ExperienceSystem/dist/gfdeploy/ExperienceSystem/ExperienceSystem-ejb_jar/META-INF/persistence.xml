<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="ExperienceSystem-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/experienceSystem</jta-data-source>
    <class>entity.Appeal</class>
    <class>entity.Booking</class>
    <class>entity.Category</class>
    <class>entity.Employee</class>
    <class>entity.Evaluation</class>
    <class>entity.Experience</class>
    <class>entity.ExperienceDate</class>
    <class>entity.ExperienceDateCancellationReport</class>
    <class>entity.ExperienceDatePaymentReport</class>
    <class>entity.Language</class>
    <class>entity.Location</class>
    <class>entity.Message</class>
    <class>entity.Notification</class>
    <class>entity.Type</class>
    <class>entity.User</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
